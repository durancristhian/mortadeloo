{
  "name": "mortadeloo",
  "version": "0.1.0",
  "description": "mortadeloo es una aplicación para estar atento a los números de la quiniela en Argentina",
  "scripts": {
    "build": "npm run build-css & npm run build-images & npm run build-js",
    "build-css": "postcss -c postcss.json --map",
    "build-images": "copyfiles -u 1 client/img/*.* public",
    "build-js": "browserify -d -t [ babelify --presets [ es2015 ] ] client/js/app.js | exorcist public/js/app.map.js > public/js/app.js",
    "get-dreams": "babel-node server/scripts/dreams",
    "lint": "eslint **/*.js",
    "postinstall": "npm run build",
    "prebuild-css": "de public/css/**/*.* && copyfiles -u 1 client/css/main.css public",
    "prebuild-images": "de public/img/**/*.*",
    "prebuild-js": "de public/js/**/*.* && copyfiles -u 1 client/js/app.js public",
    "start": "babel-node server",
    "start-dev": "npm run watch-client & npm run watch-server",
    "watch-client": "npm run watch-css & npm run watch-js",
    "watch-css": "onchange 'client/css/**/*.css' -v -- npm run build-css",
    "watch-js": "onchange 'client/js/**/*.js' -v -- npm run build-js",
    "watch-server": "nodemon -x npm run start -w server"
  },
  "engines": {
    "node": ">= 6.0.0"
  },
  "author": "Duran Cristhian (@durancristhian)",
  "license": "MIT",
  "dependencies": {
    "async": "1.5.2",
    "autoprefixer": "6.3.5",
    "babel-cli": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "babelify": "7.2.0",
    "basscss": "7.1.1",
    "browserify": "13.0.0",
    "cheerio": "0.20.0",
    "compression": "1.6.1",
    "cookie-parser": "1.4.1",
    "copyfiles": "0.2.1",
    "csswring": "4.2.2",
    "del-cli": "0.1.2",
    "dotenv": "2.0.0",
    "exorcist": "0.4.0",
    "express": "4.13.4",
    "express-handlebars": "3.0.0",
    "express-session": "1.13.0",
    "express-socket.io-session": "1.3.1",
    "helmet": "1.3.0",
    "jquery": "2.2.2",
    "moment": "2.12.0",
    "mongoose": "4.4.10",
    "mongoose-findorcreate": "0.1.2",
    "node-schedule": "1.1.0",
    "passport": "0.3.2",
    "passport-twitter": "1.0.4",
    "postcss-banner": "1.2.0",
    "postcss-cli": "2.5.1",
    "postcss-import": "8.0.2",
    "request": "2.69.0",
    "socket.io": "1.4.5",
    "socket.io-client": "1.4.5",
    "stylelint": "5.2.1",
    "stylelint-config-standard": "4.0.1",
    "twitter": "1.2.5"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  },
  "devDependencies": {
    "babel-eslint": "6.0.0",
    "eslint": "2.5.1",
    "ghooks": "1.0.3",
    "nodemon": "1.9.1",
    "onchange": "2.2.0"
  }
}
