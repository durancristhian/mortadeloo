{
  "name": "mortadeloo",
  "version": "0.1.0",
  "description": "mortadeloo app",
  "main": "dist/server/index.js",
  "scripts": {
    "babel-node": "babel-node",
    "prebuild": "de public/**/*.* && npm run lint",
    "build": "npm run build-css && npm run build-js && npm run copy-images && npm run build-server",
    "build-css": "copyfiles -u 2 src/client/css/main.css public",
    "build-js": "copyfiles -u 2 src/client/js/app.js public",
    "build-server": "npm run compile-server && npm run copy-views",
    "compile-server": "babel src/server --out-dir dist/server",
    "copy-images": "copyfiles -u 2 src/client/img/*.* public",
    "copy-views": "copyfiles -u 2 src/server/views/**/*.handlebars dist/server",
    "lint": "eslint **/*.js",
    "lint-html": "eslint --format html **/*.js > eslint.html",
    "postinstall": "npm run build",
    "server": "nodemon --exec npm run babel-node -- src/server/index",
    "start": "node dist/server/index",
    "start-dev": "npm run lint && npm run server"
  },
  "author": "Duran Cristhian (@durancristhian)",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "6.4.5",
    "babel-eslint": "5.0.0-beta6",
    "babel-plugin-transform-runtime": "6.4.3",
    "babel-preset-es2015": "6.3.13",
    "babel-preset-stage-0": "6.3.13",
    "cheerio": "0.19.0",
    "compression": "1.6.1",
    "cookie-parser": "1.4.1",
    "copyfiles": "0.2.1",
    "del-cli": "0.1.2",
    "dotenv": "2.0.0",
    "eslint": "1.10.3",
    "express": "4.13.4",
    "express-handlebars": "2.0.1",
    "express-session": "1.13.0",
    "ghooks": "1.0.3",
    "helmet": "1.1.0",
    "mongoose": "4.3.7",
    "mongoose-findorcreate": "0.1.2",
    "nodemon": "1.8.1",
    "passport": "0.3.2",
    "passport-twitter": "1.0.3",
    "request": "2.67.0",
    "simple-node-logger": "0.92.21"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  }
}
